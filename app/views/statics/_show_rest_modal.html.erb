<div v-if="isSearhced" class="modal fade" id="showRestModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel">{{ currentRest.name }}</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">マップ表示</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">詳細情報</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">口コミ</a>
            </li>
          </ul>
          <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
              <h2>address:{{ currentRest.address }}</h2>
              <google-map
                :lat="currentRest.latitude"
                :lng="currentRest.longitude"
                :geolat="geoPosition.lat"
                :geolng="geoPosition.lng"
              />
            </div>
            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
              <p>{{ currentRest.opentime }}</p>
              <p>{{ currentRest.holiday }}</p>
              <p>{{ currentRest.address }}</p>
              <p>{{ currentRest.tel }}</p>
              <p>駐車数:{{ currentRest.parking_lots }}</p>
              <p>{{ currentRest.pr.pr_short }}</p>
              <p>{{ currentRest.e_money }}</p>
              <p>{{ currentRest.credit_card }}</p>
            </div>
            <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
            ...
            </div>
          </div>
    </div>
  </div>
</div>
</div>