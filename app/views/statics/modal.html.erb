<div id="app">

  <h1 class="pt-5">hello modal</h1>
  <button @click="showModal" class="btn btn-warning">show modal</button>
  
  <div id="overlay" v-show="ifModal" @click="closeModal">
    <div class="content" @click="stopEvent">
      <p>this is modal</p>
      <button @click="closeModal" class="btn btn-danger">close</button>
    </div>
  </div>

  <button @click="toggleFlg" class="btn btn-outline-danger">
    trans start
  </button>

  <transition name="trans">
    <p v-show="flg" class="trans">this is trans</p>
  </transition>

</div>
  
<%= javascript_pack_tag 'modal' %>

<style>

#overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0,0,0,.5);
  z-index: 100;
  display: flex;
  justify-content: center;
  align-items: center;
}

.content {
  width: 500px;
  padding: 30px;
  background: white;
}

p.trans {
  background: #ccc;
  color: tomato;
}

.trans-enter-active {
  transition: 0.6s;
}
.trans-enter {
  opacity: 0;
  transform: translateY(-300px);
}
.trans-enter-to {
  opacity: 1;
  transform: translateY(0);
}

.trans-leave-active {
  transition: 0.6s;
}
.trans-leave {
  opacity: 1;
  transform: translateY(0);
}
.trans-leave-to {
  opacity: 0;
  transform: translateY(-300px);
}
</style>